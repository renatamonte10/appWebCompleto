@model AppWebCompleto.Models.Veiculos
<h3 class="badge bg-primary">@ViewBag.Message</h3>

@using (Html.BeginForm("Salvar", "Veiculos", FormMethod.Post, new { id="formVeiculosAlterar", name= "formVeiculosAlterar" } ))
{
    <div class="row col-md-offset-3">
     
        @Html.LabelFor(v => v.Nome, new { @class= "col-sm-2 col-form-label text-left" })
        <div class="col-sm-4">
            @Html.TextBoxFor(v => v.Nome, new { @class= "form-control" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(v => v.Modelo, new { @class = "col-sm-2 col-form-label text-left" })
        <div class="col-sm-4 left">
            @Html.TextBoxFor(v => v.Modelo, new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(v => v.Fabricacao, new { @class = "col-sm-2 col-form-label text-left" })
        <div class="col-sm-4">
            @Html.TextBoxFor(v => v.Fabricacao, new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(v => v.Cor, new { @class = "col-sm-2 col-form-label text-left" })
        <div class="col-sm-4">
            @Html.TextBoxFor(v => v.Cor, new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(v => v.Combustivel, new { @class = "col-sm-2 col-form-label text-left" })
        <div class="col-sm-4">
            @Html.TextBoxFor(v => v.Combustivel, new { @class = "form-control" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="automatico" class="col-sm-2 col-form-label text-left">Automático:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="automatico" name="automatico" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(v => v.Valor, new { @class = "col-sm-2 col-form-label text-left" })
        <div class="col-sm-4">
            @Html.TextBoxFor(v => v.Valor, new { @class = "form-control" }) 
        </div>
    </div>

    <br />
    <div class="button">
        <button class="btn btn-primary center" onclick="Salvar()" type="submit">Salvar</button>
    </div>


}