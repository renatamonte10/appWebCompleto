
@{
    var veiculo = ViewBag.veiculo;
}

<h3 class="badge bg-primary">@ViewBag.Message</h3>

<form id="formulario" action="/veiculos/salvar" method="post">

    <div class="row col-md-offset-3">
        <input type="hidden" id="id" name="id" value="@veiculo.Id" />
        <label for="nome" class="col-sm-2 col-form-label text-left">Marca:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="nome" name="nome" value="@veiculo.Nome" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="modelo" class="col-sm-2 col-form-label text-left">Modelo:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="modelo" name="modelo" value="@veiculo.Modelo" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="fabricacao" class="col-sm-2 col-form-label text-left">Ano:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="fabricacao" name="fabricacao" value="@veiculo.Fabricacao" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="Cor" class="col-sm-2 col-form-label text-left">Cor:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="cor" name="cor" value="@veiculo.Cor" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="combustivel" class="col-sm-2 col-form-label text-left">Combustível:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="combustivel" name="combustivel" value="@veiculo.Combustivel" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="automatico" class="col-sm-2 col-form-label text-left">Automático:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="automatico" name="automatico" value="@veiculo.Automatico" />
        </div>
    </div>
    <div class="row col-md-offset-3">
        <label for="valor" class="col-sm-2 col-form-label text-left">Valor:</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" id="valor" name="valor" value="@veiculo.Valor" />
        </div>
    </div>

    <br />
    <div class="button">
        <button class="btn btn-primary"  type="submit">Salvar</button>
    </div>


</form>

